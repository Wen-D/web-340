<!DOCTYPE html>
<html lang="en">
  <%- include ('header') %>

  <body>

    <%- include ("navbar") %>
    <div class="container">
      <h2><%= title %></h2>

       

        <% if(employees.length) { %>
        
        <a href="/new">Add New employee</a>
      
        <table class="table">
          <thead>
            <tr>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Function</th>
            </tr>
          </thead>
        <tbody>
          <% employees.forEach(function(entry) { %>
          <tr>
            <td><%= entry.firstName %></td>
            <td><%= entry.lastName %></td>
            <td><a href="/view/<%= entry.firstName %>">VIEW</a></td>
          </tr>
        </tbody>
        <% }) %>
        </table>
        <% } else { %>
          There are no entries -  <a href="/new">Add one</a>
        <% } %>
        

    </div>    
    <%- include ("footer") %>  
  </body>  